@model FormBasedAuth.Models.Cars
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create","Home"))
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(x=>x.Id, "ID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Id, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(x => x.Model, "Model", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x=>x.Model, new { htmlAttributes = new { @class="form-control"} })
            </div>
        </div>
    </div>

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(x => x.Name, "Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(x => x.Capability, "Capability", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Capability, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input name="Save" type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>

}

