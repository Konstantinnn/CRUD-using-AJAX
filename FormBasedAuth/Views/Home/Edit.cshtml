@model FormBasedAuth.Models.Cars
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Home"))
{
    <div class="form-horizontal">
        <div class="form-group">
            <div>
                @Html.HiddenFor(x => x.Id)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Model, "Model", new { @class = "control-label col-md-2" })
            <div class="col-lg-10">
                @Html.EditorFor(x => x.Model, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Model, "Model", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Name, "Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Name, "Name", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Capability, "Capability", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Capability, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Capability, "Capability", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input name="Update" type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}

